page{
  overflow:hidden;
}
.banner{
  width:100%;
  height:320rpx;
  overflow:hidden;
  padding-top:6rpx;
}
.banner image{
  width:100%;
}
.conTitle{
  width:100%;
  font-size:30rpx;
  line-height:70rpx;
  color:#333;
  text-align: center;
  border-bottom:1rpx solid #ddd;
}
.clothesCon{
  overflow:hidden;
  width:100%;
}
.clothesCon .con{
  padding-bottom:20rpx;
  overflow:hidden;
}
.clothesCon .conCards{
  width:50%;
  float:left;
  padding:14rpx 6rpx 0;
  box-sizing:border-box;
  font-size:30rpx;
  color:#555;
  overflow:hidden;
}
.clothesCon .conCards .image{
  width:100%;
  height:240rpx;
   margin-bottom:8rpx;
   overflow: hidden;
}
.clothesCon .conCards image{
  width:100%;
  height:240rpx;
}
.clothesCon .conCards text{
  display: block;
  line-height:42rpx;
  padding-left:8rpx;
}
.clothesCon .conCards text:last-child{
  color:#ccc;
  font-size:26rpx;
}
.hint{
  font-size:20rpx;
  line-height:40rpx;
  text-align: center;
  color:#aaa;
  margin:30rpx auto 60rpx;
  border-top:1px solid #eee;
  position: relative;
}
.hint text{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background: #fff;
  padding:0 30rpx;
}