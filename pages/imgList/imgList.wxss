.imageshow text{
  display: block;
  margin:20rpx 0;
  text-align: center;
  font-size:26rpx;
  color:#888;
}
.imageshow .title{
  line-height:40rpx;
  font-size:38rpx;
  margin-top:32rpx;
}
.imageshow .kind{
  padding-bottom:30rpx;
  border-bottom:1px solid #eee;
}
.imageshow .poetry{
  text-align: left;
  color:#666;
  margin:0;
  padding:10rpx 50rpx 20px; 
  line-height:60rpx;
  text-indent: 80rpx;
}
.imageshow image{
  width:100%;
}
.hint{
  font-size:20rpx;
  line-height:40rpx;
  text-align: center;
  color:#aaa;
  margin:30rpx auto 60rpx;
  border-top:1px solid #eee;
  position: relative;
}
.hint text{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background: #fff;
  padding:0 30rpx;
}